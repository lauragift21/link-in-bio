---
interface Props {
  title?: string;
}

const { title = "Link-in-bio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Link-in-bio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-['Inter']">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  @property --border-angle {
    syntax: "<angle>";
    inherits: false;
    initial-value: 0deg;
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
    background: #000;
  }

  body {
    margin: 0;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><filter id="noise" x="0%" y="0%" width="100%" height="100%"><feTurbulence type="fractalNoise" baseFrequency="2.5" numOctaves="3" result="NOISE"/><feBlend mode="soft-light" in="SourceGraphic" in2="NOISE"/></filter><rect width="100%" height="100%" filter="url(#noise)"/></svg>');
  }
</style>
