---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile.astro';
import LinkCard from '../components/LinkCard';

const links = [
  {
    title: 'Website',
    url: 'https://giftegwuenu.com',
    icon: 'https://api.iconify.design/mdi:web.svg?color=white',
  },
  {
    title: 'Twitter',
    url: 'https://twitter.com/lauragift_',
    icon: 'https://api.iconify.design/line-md:twitter.svg?color=white',
  },
  {
    title: 'Instagram',
    url: 'https://instagram.com/thegiftcode_',
    icon: 'https://api.iconify.design/line-md:instagram.svg?color=white',
  },
  {
    title: 'Tiktok',
    url: 'https://tiktok.com/@thegiftcode_',
    icon: 'https://api.iconify.design/line-md:tiktok.svg?color=white',
  },
  {
    title: 'Youtube',
    url: 'https://youtube.com/@giftegwuenu',
    icon: 'https://api.iconify.design/line-md:youtube.svg?color=white',
  },
];
---

<Layout>
  <main class="relative min-h-screen p-8 bg-black overflow-hidden">
		
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_left,_rgba(0,145,233,0.4)_0%,_rgba(0,0,0,1)_30%)]"></div>

    <div class="absolute top-0 left-0 w-1/2 h-1/3 bg-[radial-gradient(circle_at_top_left,_rgba(0,159,253,0.2)_0%,_rgba(0,0,0,0)_80%)] blur-xl opacity-50"></div>

    <div class="relative max-w-xl mx-auto space-y-4 text-white">
      <Profile
        name="Gift Egwuenu"
        bio="Developer Advocate | Content Creator | Community Builder"
        avatar="https://lh3.googleusercontent.com/a/ACg8ocJaz2Zixwtd4971mwQRd8-0hAdfo_gFYr2jsmpx36G6uNdXgiLcbQ=s576-c-no"
      />
      
      {links.map((link, index) => (
        <LinkCard
          client:load
          title={link.title}
          url={link.url}
          icon={link.icon}
          delay={index * 0.1}
        />
      ))}
    </div>
  </main>
</Layout>

