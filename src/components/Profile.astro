---
interface Props {
  name: string;
  bio: string;
  avatar: string;
}

const { name, bio, avatar } = Astro.props;
---

<div class="text-center mb-10">
  <img
    src={avatar}
    alt={name}
    class="w-24 h-24 rounded-full mx-auto mb-4 border-2 border-white/20"
  />
  <h1 class="text-2xl font-bold text-white mb-2">{name}</h1>
  <p class="text-white/80">{bio}</p>
</div>