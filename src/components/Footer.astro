---
interface Props {
  name: string;
  email: string;
}

const { name, email } = Astro.props;
---

<footer class="mt-24 py-12 text-center">
  <div class="flex items-center justify-center gap-3 mb-6">
    <div class="w-8 h-px bg-warm-200"></div>
    <div class="w-1.5 h-1.5 rounded-full bg-terracotta/30"></div>
    <div class="w-8 h-px bg-warm-200"></div>
  </div>
  <p class="text-warm-400 text-sm mb-1">&copy; {new Date().getFullYear()} {name}</p>
  <a
    href={`mailto:${email}`}
    class="text-warm-500 text-sm hover:text-terracotta transition-colors duration-300"
  >{email}</a>
</footer>
